<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenucActivity"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/blt"
                android:id="@+id/img_blt"/>

        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:text="클래식"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#5D5D5D" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdgroup"
        android:orientation="vertical">

        <RadioButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
            android:id="@+id/rd_blt"
            android:text="비엘티                                       5100원"
            />

        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_eggmayo"
            android:text="에그마요                                      4300원"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_ham"
            android:text="햄                                                  4700원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_meatball"
            android:text="미트볼                                       5100원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_bmt"
            android:text="이탈리안 비엠티                    5100원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_tuna"
            android:text="참치                                             5100원"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="프레시"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#5D5D5D" />
        <RadioButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:id="@+id/rd_rotichicken"
        android:text="로티세리치킨                           5100원"
        />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_vegi"
            android:text="베지                                       5100원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_rostchicken"
            android:text="로스트치킨                                5100원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_rostbeef"
            android:text="로스트비프                                 5100원"
            />

        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_subwayculb"
            android:text="써브웨이클럽                          5100원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_turkey"
            android:text="터키                            5100원"
            />

        <!--프리미엄 시작-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="프리미엄"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#5D5D5D" />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_shrimp"
            android:text="쉬림프                          6300원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_shrimpavo"
            android:text="쉬림프 아보카도                        6300원"
            />

        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_subwayculb"
            android:text="써브웨이클럽                          6300원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_pulledpork"
            android:text="풀드포크                        6300원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_steakcheese"
            android:text="스테이크 앤 치즈                        5100원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_turkyBaconAvo"
            android:text="터키 베이컨 아보카도                           5100원"
            />

        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_ChickenBaconRanch"
            android:text="치킨베이컨 랜치                          5100원"
            />
        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_SubwayMelt"
            android:text="서브웨이 멜트                   5100원"
            />

        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_TurkeyBacon"
            android:text="터키 베이컨                   5100원"
            />

        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_SpicyItalian"
            android:text="스파이시 이탈리안                   5100원"
            />

        <RadioButton
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rd_ChickenTeruy"
            android:text="치킨 데리야끼                  5100원"
            />


    </RadioGroup>
<!--//라디오 그룹의 끝-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 보기"
       android:id="@+id/btn"

        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="다음"
            android:id="@+id/classicbt"/>

    </LinearLayout>


</LinearLayout>

</ScrollView>